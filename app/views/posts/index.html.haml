- provide(:description, 'Blog de lkdjiin (xavier nayrac), développeur et entrepreneur')
- provide(:keywords, 'blog, article, lkdjiin, xavier nayrac, entrepreneur, ruby, rails')
- provide(:title, "Expériences d'un développeur")
- @posts.each do |p|
  .teaser
    %h1.beta= link_to p.title, post_path(p)
    .post-date= l p.created_at, format: "%e %B %Y"
    .post-tags= labeled_tags(p.tags)
    = p.truncated_content link_to("Lire cet article", post_path(p))

= render "shared/top_page"
